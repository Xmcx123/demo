<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ClockView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.example.liaozhihua.test.view.CheckView
        android:id="@+id/id_check_view"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="80dp"
        android:visibility="gone">
        <com.example.liaozhihua.test.view.PieView
            android:id="@+id/id_pview"
            android:layout_width="300dp"
            android:layout_height="300dp" />
    </LinearLayout>

    <com.example.liaozhihua.test.view.MyView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <com.example.liaozhihua.test.view.MyViewGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="ces "
            android:background="@color/colorAccent"></TextView>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="ces "
            android:background="@color/colorAccent"></TextView>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ces "
            android:background="@color/colorAccent"></TextView>
    </com.example.liaozhihua.test.view.MyViewGroup>



</LinearLayout>